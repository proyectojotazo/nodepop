<%- include('header') -%>

<h1 class="form-signin-title"><%= __('Sign In') %></h1>

<form class="form-signin" method="post" action="sign-in" novalidate>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label"><%= __('Email') %></label>
    <input
      type="email"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      name="email"
    />
    <div id="emailHelp" class="form-text">
      <%= __("We'll never share your email with anyone else.") %>
    </div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label"><%= __('Password') %></label>
    <input name="password" type="password" class="form-control" id="exampleInputPassword1" />
  </div>
  <button type="submit" class="btn btn-primary"><%= __('Submit') %></button>
</form>

<%- include('footer') -%>
